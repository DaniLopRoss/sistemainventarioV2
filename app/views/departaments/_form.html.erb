<head>
<%= stylesheet_link_tag "style" %>
</head>

 <div class="probar">
<%= form_with(model: departament) do |form| %>
  <% if departament.errors.any? %>
    <div style="color: red">
      

      <ul>
        <% departament.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <br>
<div class="form-group row">
   <%= form.label :nombre ,'Nombre:', class:'col-sm-2' %>
   
   <div class="col-sm-4">
   <%= form.text_field :nombre , class:'form-control' %>
   </div>
</div>



 
   <div class="form-group row ">
     <%= form.label :num_equipos, "Num. Equipos:", class:'col-sm-2'%>
     <div class="col-sm-4">
     <%= form.number_field :num_equipos, class:'form-control'  %>
     </div>
   </div>
  <br>
   <div>
   <button class="btn btn-info  btn-xs round btn-guardar" <%= form.submit %> Guardar </button>
   <%= link_to 'Cancelar', url_for(:back), class: "btn btn-warning btn-xs round btn-cancelar"%>
   <%= link_to "Regresar", departaments_path, class: "btn btn-success btn-xs round btn-regresar "  %> 
   
   </div>
<% end %>
