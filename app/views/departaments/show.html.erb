<head>
<%= stylesheet_link_tag "style" %>
</head>

<div class="container">
<div class="card mt-5">
<div class="card-header">
<ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="">Departamentos</a></li>
          <li class="breadcrumb-item active">Caracteristicas del departamento</li>
        </ol>
                  <h5 class="text">Departamento <%= @departament.id%> </h5>
</div>
 <div class="probar">
<p style="color: green"><%= notice %></p>

<%= render @departament %>

<div>
<%= link_to "Editar", edit_departament_path(@departament), class: "btn btn-warning btn-xs round btn-editar " %> 
<%  if can? :destroy, @departament%>
  <%= link_to "Eliminar", @departament, method: :delete, data: { confirm: "Esta seguro de eliminar"},  class: "btn btn-danger btn-eliminar"%>
<% end %>
<%= link_to "Regresar", departaments_path, class: "btn btn-success btn-xs round btn-regresar "  %> 

<br>
</br>
</div>
