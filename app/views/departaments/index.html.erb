<head>
<%= stylesheet_link_tag "style" %>
</head>
<div align="center">
<p style="color: green"><%= notice %></p>
<ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="">Departamento</a></li>
          <li class="breadcrumb-item active">Listar departamento</li>
        </ol>
<h4>Departamentos</h4>

<div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                 
                  <p class="card-description">
                    
                  </p>
                  <div class="table-responsive pt-3">

                  <table class="table table-bordered" id="tabladepartamentos">
                  <thead class="thead-blue" >
                    <tr>
                      <th scope="col">ID</th>
                      <th>NOMBRE</th>
                      <th>Num_equipo</th>
                     
                      <th>Acciones</th>
                     
                      
                    </tr>
                  </thead>
                  
                  <% @departaments.each do |departamento| %>
                   
                    <tr>
                        <td><%= departamento.id %></td>
                        <td><%= departamento.nombre %></td>
                        <td><%= departamento.num_equipos %></td>
                        <td > 
                      <% if can? :edit, Departament%>
                      <a href="<%= edit_departament_path(departamento)%>" class="edit"><i class="bi bi-pencil-square"></i></a>
                      <%end%>
                      <% if can? :show, Departament%>
                      <a  class="mostrar"  <%= link_to ({:action => :show, :id => departamento.id}) do %><i class="bi bi-eye-fill"></i><%end%></a> 
                      <%end%>
                      <%if can? :destroy, Departament%> 
                       <a class="eliminar" <%= link_to ({ :action => :destroy, :id => departamento.id })do%>
                      <i class="bi bi-trash"></i>
                      <%end%>
                      <% end %>
                      </a>

                      </td>
                      
                      </tr>
                </div>
                
                
                <% end %>
                    <a href="departaments/new" class="new"><i class="bi bi-plus-circle-fill"></i></a>
                  </div>
                </div>
              </div>
            </div>


<script>
            $(document).ready(function() {
              var oTable = $("#tabladepartamentos").DataTable({
                language: {
                  url: '//cdn.datatables.net/plug-ins/1.13.1/i18n/es-MX.json'
              }
              });
      } );
            </script>














