<head>
<%= stylesheet_link_tag "style" %>
</head>

<div class="container">
<div class="card mt-5">
<div class="card-header">

<h4 class="text">Nuevo Reporte </h4>
</div>
 <div class="probar">
 <%= form_with(model: reporte) do |form| %>
  <% if reporte.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(reporte.errors.count, "error") %> prohibited this reporte from being saved:</h2>

      <ul>
        <% reporte.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<br>
   <div class="form-group row">
    <%= form.label :fecha ,class:'col-sm-2' %>
    <div class="col-sm-4">
    <%= form.date_field :fecha ,  class:'form-control' %>
  </div>
  </div>

   <div class="form-group row">
    <%= form.label :observaciones,  class:'col-sm-2'  %>
    <div class="col-sm-4">
    <%= form.text_area :observaciones,  class:'form-control'  %>
  </div>
  </div>
  <br>

   <div class="form-group row">
    <%= form.label :tipo_problema,  class:'col-sm-2'  %>
    <div class="col-sm-4">
    <%= form.select :tipo_problema, ["No hay internet", "Licencia de Office", "Acceso no autorizado pagina web", "Virus en la maquina", "Aplicacion de antivirus"], class:'form-control'  %>
  </div>
  </div>

   <div class="form-group row">
    <%= form.label :id_mantenimiento,  class:'col-sm-2'  %>
    <div class="col-sm-4">
    <%= form.text_field :id_mantenimiento%>
  </div>
  </div>

  <div>
  <button class="btn btn-info" <%= form.submit %> Guardar </button>
  <%= link_to 'Cancelar', url_for(:back), class: "btn btn-warning" %>
  </div>
<% end %>
