<head>
<%= stylesheet_link_tag "style" %>

</head>
<div align= "center">

<p style="color: green" ><%=notice%></p>
<h4>Mantenimiento</h4>

<div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                 
                  <p class="card-description">
                    
                  </p>
                  <div class="table-responsive pt-3">

                  
                  <table class="table table-bordered" id="tablaman">
                  <thead class="thead-blue" >
              <tr>
              <th scope="col">Id</th>
              <th scope="col">Fecha inicio</th>
              <th scope="col">Fecha fin </th>
              <th scope="col">Observaciones</th>
              <th scope="col">Tipo de manteniminto</th>
              <th scope="col">Equipo</th>
              <th scope="col">Usuario</th>
              <th scope="col">Materiales</th>
              <th scope="col">Herramientas</th>
              <th scope="col">Insumo</th>
              <th scope="col">Acciones</th>
              </tr>
              </thead>

              <tbody>
              <% @mantenimientos.each do |mantenimientos| %>
              <tr>
              <td><%= mantenimientos.id_mantenimiento %></td>
              <td><%= mantenimientos.fecha_inicio %></td>
              <td><%= mantenimientos.fecha_fin %></td>
              <td><%= mantenimientos.observaciones %></td>
              <td><%= mantenimientos.tipo_mantenimiento %></td>
              <td><%= mantenimientos.serie %></td>
              <td><%= mantenimientos.rfc %></td>
              <td><%= mantenimientos.id_materiales %></td>
              <td><%= mantenimientos.id_herramienta %></td>
              <td><%= mantenimientos.id_insumo %></td>
              <td>
              <a href="<%= edit_mantenimiento_path(mantenimientos)%>" class="edit"><i class="bi bi-pencil-square"></i></a>
               <a  class="mostrar"  <%= link_to ({:action => :show, :id => mantenimientos.id}) do %><i class="bi bi-eye-fill"></i><%end%></a>
               <a class="eliminar" <%= link_to ({ :action => :destroy, :id => mantenimientos.id})do%>
                  <i class="bi bi-trash"></i>
                  <%end%>
                  
                  </a>
              </td>
              </tr>
              <%end%>
              </tbody>
              <a href="mantenimientos/new" class="new"><i class="bi bi-plus-circle-fill"></i></a>

             </div>
            </div>
            </div>
            </div>


<script>
            $(document).ready(function() {
              var oTable = $("#tablaman").DataTable({
                language: {
                  url: '//cdn.datatables.net/plug-ins/1.13.1/i18n/es-MX.json'
              }
              });
      } );
            </script>