<head>
<%= stylesheet_link_tag "style" %>
</head>
<div align="center">
<p style="color: green"><%= notice %></p>

<h4>Equipos</h4>

<div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                 
                  <p class="card-description">
                    
                  </p>
                  <div class="table-responsive pt-3">

                  
                  <table class="table table-bordered" id="equipostabla">
                  <thead class="thead-blue" >
              <tr>
                <th></th>
                <th scope="col">Serie</th>
                <th>Equipo</th>
                 <th>Modelo</th>
                <th>Serial</th>
                <th>Observaciones</th>
                <th>RAM</th>
                <th>Disco duro</th>
                <th>Tipo</th>
                <th>Marca</th>
                <%# <th>Licencia</th> %>
                <th>Edificio</th>
                <th>Area</th>
                <th>Estatus</th>
               
                <th>Acciones</th>
                
                
                
              </tr>
            </thead>
            <tbody>
            <% @equipo12s= Equipo12.all%>
              <% @equipo12s.each do |equipo12s| %>
                <tr>
                
                <td></td>
                  <td><%= equipo12s.serie %></td>
                  <td><%= equipo12s.tipo %></td>
                  <td><%= equipo12s.modelo %></td>
                  <td><%= equipo12s.serial %></td>
                  <td><%= equipo12s.observaciones %></td>
                  <td><%= equipo12s.ram %></td>
                  <td><%= equipo12s.disco_duro %></td>
                  <td><%= equipo12s.tipo%></td>
                  <td><%= equipo12s.id_marcas %></td>
                  <%# <td><%= equipo12s.id_licencias %></td>
                  <td><%= equipo12s.id_departamentos%></td>
                  <td><%= equipo12s.id_areas %></td>
                  <td><%= equipo12s.estatus %></td>
                  
                  <td > 
           
                  <a href="<%= edit_equipo12_path(equipo12s)%>" class="edit"><i class="bi bi-pencil-square"></i></a>
               
                 
                  <a  class="mostrar"  <%= link_to ({:action => :show, :id => equipo12s.serie}) do %><i class="bi bi-eye-fill"></i><%end%></a>  
              
                 
                   <a class="eliminar" <%= link_to ({ :action => :destroy, :id => equipo12s.serie })do%>
                  <i class="bi bi-trash"></i>
              
                  <% end %>
                  </a>
                  </td>

                



                </tr>
              <% end %>
              <a href="equipo12/new" class="new"><i class="bi bi-plus-circle-fill"></i></a>
              
            </tbody>
          </table>
                    
                  </div>
                </div>
              </div>
            </div>

<script>
            $(document).ready(function() {
              var oTable = $("#equipostabla").DataTable({
                language: {
                  url: '//cdn.datatables.net/plug-ins/1.13.1/i18n/es-MX.json'
              },

          responsive: "true",
          dom: 'Bfrtilp',    
                buttons:[ 
        {
          extend:    'excelHtml5',
          text:      '<i class="bi bi-file-earmark-excel"></i> ',
          titleAttr: 'Exportar a Excel',
          className: 'btn btn-success'
        },
        {
          extend:    'pdfHtml5',
          text:      '<i class="bi bi-file-earmark-pdf"></i> ',
          titleAttr: 'Exportar a PDF',
          className: 'btn btn-danger'
        },
        {
          extend:    'print',
          text:      '<i class="bi bi-printer"></i> ',
          titleAttr: 'Imprimir',
          className: 'btn btn-info'
        },
      ],
                columnDefs: [ {
            sortable: false,
            "class": "index",
            targets: 0
        } ],
        order: [[ 1, 'asc' ]],
        fixedColumns: true
        } );
 
    oTable.on( 'order.dt search.dt', function () {
        oTable.column(0, {search:'applied', order:'applied'}).nodes().each( function (cell, i) {
            cell.innerHTML = i+1;
        } );
    } ).draw();
            }); 

                
            </script>






             

            














