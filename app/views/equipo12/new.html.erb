<head>
<%= stylesheet_link_tag "style" %>
</head>

<div class="container">
<div class="card mt-5">
<div class="card-header">
<ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="">Equipo</a></li>
          <li class="breadcrumb-item active">Registrar nuevo equipo</li>
        </ol>
                  <h4 class="text">Nuevo equipo </h4>
</div>
 <div class="probar">
                  <%= form_for @equipo12,url: {action: :create} do |f| %>
                    <%= token_tag nil %>
                    <%= "<div>#{@equipo12.errors.full_messages.first}</div>".html_safe if @equipo12.errors.any? %>  

<br>


                      <div class="form-group row">
                          <%= f.label :serie ,'Serie:', class:'col-sm-2' %>
                          
                          <div class="col-sm-4">
                          <%= f.text_field :serie , class:'form-control' %>
                          </div>
                      </div>
            


                      <div class="form-group row">
                           <%= f.label :Modelo , class:'col-sm-2'%>
                           <div class="col-sm-4">
                           <%= f.text_field :modelo , class:'form-control'%>
                           </div>
                           </div>

                           <div class="form-group row">
                           <%= f.label :Serial , class:'col-sm-2'%>
                           <div class="col-sm-4">
                           <%= f.text_field :serial , class:'form-control'%>
                           </div>
                       </div>

                       <div class="form-group row ">
                       <%= f.label :id_marca,"Marca" , class:'col-sm-2'%>
                       <div class="col-sm-4">
                       <div class="placeholder">
                       <%= f.collection_select( :id_marcas, Marca.all{|m| [m.nombre, m.id_marca]}, :id, :nombre, prompt: "Seleccione la marca")%>
                       </div>
                       </div>
              </div>
                       <div class="form-group row">
                       <%= f.label :id, "Departamento" , class:'col-sm-2'%>
                       <div class="col-sm-4">
                       <div class="placeholder">
                       <%= f.collection_select( :id_departamentos, Departamento.all{|d| [d.nombre, d.id]}, :id, :nombre, class:'form-control', prompt:"Seleccione el departamento")%>
                        </div>
                       </div>
                            </div>

                            <div class="form-group row">
                           <%= f.label :id, "Area:" , class:'col-sm-2'%>
                           <div class="col-sm-4">
                           <div class="placeholder">
                           <%= f.collection_select(:id_areas, Area.all{|a| [a.nombre]}, :id, :nombre, class:'form-control', prompt: "Seleccione el Ã¡rea")%>
                           </div>
                           </div>
                           </div>


                            <div class="form-group row">
                            <%= f.label :id_tipo ,'Tipo:', class:'col-sm-2' %>
                             <div class="col-sm-4">

                             <%= collection_select(:equipo12, :id_tipo, @tipos, :id, :nombre, class:'form-control', prompt: "Selecione un tipo" )%>
                             <div class="placeholder">
                             <%= f.collection_select(:id_tipo, Tipo.all{|t| [t.nombre]}, :id, :nombre,  class:'form-control', prompt: "Selecione un tipo" )%>
                                 </div> 
                             </div>
                             </div>

                           
           
                           
                              <div class="form-group row">
                              <%= f.label :estatus , "Estatus:" , class:'col-sm-2'%>
                              
                                  <div class="form-group col-sm-4">
                                  <div class="placeholder">
                                  <%= f.select :estatus, ["GUARDADO", "ACTIVO", "INACTIVO"], prompt: "Seleccione el estado" %>
                                  </div>
                                  </div>
                              </div>
                              <div class="form-group row">
                              <%= f.label :Observaciones , class:'col-sm-2'%>
                              <div class="col-sm-4">
                              <%= f.text_field :observaciones , class:'form-control'%>
                              </div>
                          </div>
                          

                          <div class="form-group row ">
                          <%= f.label :RAM , class:'col-sm-2'%>
                              <div class="col-sm-4">
                              <%= f.text_field :ram , class:'form-control'%>
                                 </div>
                          </div>
           

                          <div class="form-group row">
                          <%= f.label :Disco_duro , class:'col-sm-2' %>
                             
                              <div class="col-sm-4">
                              <%= f.text_field :disco_duro , class:'form-control'%>
                              </div>
                          </div>

                          <div class="form-group row">
                          <%= f.label :fecharegistro, class:'col-sm-2' %>
                             
                              <div class="col-sm-4">
                              <%= f.date_field :fecharegistro , class:'form-control'%>
                              </div>
                          </div>
                          
                       
                          <div class="form-group row">
                          <%= f.label :id_licencia, "Licencia:"  , class:'col-sm-2'%>
                              <div class="col-sm-4">
                              <div class="placeholder">
                              <%= f.collection_select(:id_licencias, Licencia.all.order(:nombre), :nombre, :nombre, class:'form-control', prompt: "Seleccione una licencia")%>
                                  </div>
                              </div>
                          </div> 
                        
                        <br/>
                         <div>
                 <button type="submit" class="btn btn-info">Guardar</button>
                 <%= link_to 'Cancelar', url_for(:back), class: "btn btn-warning" %>
           
                                 
                                  
                          </div>
                          </div>
                      </section>
                  </div>
              </div>
  
              <% end %>
              </form>
              


