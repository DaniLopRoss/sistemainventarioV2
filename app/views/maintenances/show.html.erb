<head>
<%= stylesheet_link_tag "style" %>
</head>
<ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="">Mantenimiento</a></li>
          <li class="breadcrumb-item active"> CaracterÃ­sticas de mantenimiento</li>
        </ol>
<div class="container">
<div class="card mt-5">
<div class="card-header">

 <h5 class="text ">Mantenimiento <%= @maintenance.id %> </h5>
</div>
 <div class="probar">


<div class="container">
     

 <div class="form-group row">
      <%= label :nombre, 'Nombre', class: 'col-sm-2'%>
      <div class="col-sm-4">
      <%= @maintenance.nombre%>
      </div>
      </div>
      

      <div class="form-group row">
      <%= label :fecha_inicio, 'Fecha de inicio', class: 'col-sm-2'%>
      <div class="col-sm-4">
      <%= @maintenance.fecha_inicio%>
      </div>
      </div>

      <div class="form-group row">
      <%= label :fecha_fin, 'Fecha final', class: 'col-sm-2'%>
      <div class="col-sm-4">
      <%= @maintenance.fecha_fin%>
      </div>
      </div>

      <div class="form-group row">
      <%= label :observaciones, 'Observaciones', class: 'col-sm-2'%>
      <div class="col-sm-4">
      <%= @maintenance.observaciones%>
      </div>
      </div>

      <div class="form-group row">
      <%= label :tipo_mantenimiento, 'Tipo mantenimieento', class: 'col-sm-2'%>
      <div class="col-sm-4">
      <%= @maintenance.tipo_mantenimiento%>
      </div>
      </div>

      <div class="form-group row">
      <%= label :equipment_id, 'Serie del equipo', class: 'col-sm-2'%>
      <div class="col-sm-4">
      <%= @maintenance.equipment_id%>
      </div>
      </div>

      <div class="form-group row">
      <%= label :zone_id, 'Area', class: 'col-sm-2'%>
      <div class="col-sm-4">
      <%= @maintenance.zone.nombre%>
      </div>
      </div>

      <div class="form-group row">
      <%= label :usuario_id, 'Usuario', class: 'col-sm-2'%>
      <div class="col-sm-4">
      <%= @maintenance.usuario_id%>
      </div>
      </div>

      <div class="form-group row">
      <%= label :physical_id, 'Materiales', class: 'col-sm-2'%>
      <div class="col-sm-4">
      <%= @maintenance.physical.nombre%>
      </div>
      </div>


      <div class="form-group row">
      <%= label :tool_id, 'Herramienta', class: 'col-sm-2'%>
      <div class="col-sm-4">
      <%= @maintenance.tool.nombre%>  
      </div>
      </div>

      <div class="form-group row">
      <%= label :resource_id, 'Insumo', class: 'col-sm-2'%>
      <div class="col-sm-4">
      <%= @maintenance.resource_id%>
      </div>
      </div>

      <br>
      </br>
      

<div>
<% if can? :edit, @maintenance%>
  <%= link_to "Editar ", edit_maintenance_path(@maintenance), class: "btn btn-warning btn-xs round btn-editar" %>
  <%end%>
   <% if can? :destroy, @maintenance%>
  <%= link_to "Eliminar", @maintenance, method: :delete , data: { confirm: "Esta seguro de eliminar"}, class: "btn btn-danger btn-eliminar"%>
  <%end%>
  <%= link_to "Regresar", maintenances_path, class: "btn btn-success btn-xs round btn-regresa"%>
  <br>
  </br>
</div>


