
<head>
<%= stylesheet_link_tag "style" %>
</head>

<div class="container">
<div class="card mt-5">
<div class="card-header">

<h4 class="text">Nuevo Usuario </h4>
</div>
 <div class="probar">
<br>

<%= form_for @usuarios ,url: {action: :create}  do |f| %>
 <%= token_tag nil %>
  <%= "<div>#{@usuarios.errors.full_messages.first}</div>".html_safe if @usuarios.errors.any? %>  


  <div class="form-group row">
  <%= f.label :nombre, "Nombre:", class:'col-sm-2'  %><br />
  <div class="col-sm-8">
  <%= f.text_field :nombre, class:"form-control" %>
</div>
</div>

  <div class="form-group row">
  <%= f.label :rfc, "RFC:", class:'col-sm-2'  %><br />
  <div class="col-sm-8">
  <input type="text" onkeyup="mayus(this);" <%= f.text_field :rfc, class:"form-control" %>
</div>
</div>
<div class="form-group row">
    <%= f.label :apellidouno, "Apellido Paterno:", class:'col-sm-2'  %><br />
    <div class="col-sm-8">
    <%= f.text_field :apellidouno, class:"form-control" %>
  </div>
  </div>
  <div class="form-group row">
    <%= f.label :apellidodos, "Apellido Materno:", class:'col-sm-2'  %><br />
    <div class="col-sm-8">
    <%= f.text_field :apellidodos, class:"form-control" %>
  </div>
  </div>
  <div class="form-group row">
    <%= f.label :role, "Rol:", class:'col-sm-2'  %><br />
    <div class="col-sm-8">
    <%= f.select :role, ["Administrador", "Agente", "Personal"], prompt: "Seleccione el rol" %>
  </div>
  </div>
  <div class="form-group row">
    <%= f.label :email, "Correo:", class:'col-sm-2'  %><br />
    <div class="col-sm-8">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control"  %>
  </div>
  </div>
  <div class="form-group row">
    <%= f.label :password, "Contraseña:", class:'col-sm-2'  %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> Caracteres minimo)</em>
    <% end %><br />
    <div class="col-sm-8">
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control"  %>
  </div>
  </div>
  <div class="form-group row">
    <%= f.label :password_confirmation, "Confirma Contraseña:", class:'col-sm-2' %><br />
    <div class="col-sm-8">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control"  %>
  </div>
  </div>
<br>
<div class="actions">
<%= f.submit "Registrarse ", class: "btn btn-primary" %>
<%= link_to 'Cancelar', url_for(:back), class: "btn btn-warning" %>
</div>
<% end %>

</form>


 <script>
function mayus(e) {
  e.value = e.value.toUpperCase();
}
</script>