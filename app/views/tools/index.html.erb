
<head>
<%= stylesheet_link_tag "style" %>
</head>
<div align="center">

<ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="">Herramientas</a></li>
          <li class="breadcrumb-item active">Listar herramientas</li>
        </ol>
<h5>Herramienta</h5>

<div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                 
                  <p class="card-description">
                    
                  </p>
                  <div class="table-responsive pt-3">

                  
                  <table class="table table-bordered" id="tablaherramientas">
                  <thead class="thead-blue" >
              <tr>
              <th>No.</th>
            
                <th scope="col">Nombre</th>
                
                <th>Caracter√≠sticas</th>
                <th>Existencia</th>
                <th>Estatus</th>
                <th>Acciones</th>
                
              </tr>
            </thead>
            <tbody>


<div id="tools">

  <% @tools.each do |tools  | %>
    <tr>
    <td></td>

<td><%= tools.nombre %></td> 
<td><%= tools.caracteristicas %></td> 
<td><%= tools.existencia %></td> 
<td><%= tools.estatus %></td> 
<td>
     <%if can? :edit, Tool%>
      <a href="<%= edit_tool_path(tools)%>" class="edit"><i class="bi bi-pencil-square"></i></a>
      <%end%>
      <%if can? :show, Tool%>
       <a  class="mostrar"  <%= link_to ({:action => :show, :id => tools.id}) do %><i class="bi bi-eye-fill"></i><%end%></a> 
       <%end%>
       <%if can? :destroy, Tool%> 
      <a class="eliminar" <%= link_to ({ :action => :destroy, :id => tools.id })do%>
      <i class="bi bi-trash"></i>
      <% end %>
      </a>
      <%end%>
</td>

</tr>
<% end %>
<a href="tool/new" class="new"><i class="bi bi-plus-circle-fill"></i></a>
  
  
</div>

<script>
            $(document).ready(function() {
              var oTable = $("#tablaherramientas").DataTable({
                language: {
                  url: '//cdn.datatables.net/plug-ins/1.13.1/i18n/es-MX.json'
              },

          responsive: "true",
          dom: 'Bfrtilp',    
                buttons:[ 
        {
          extend:    'excelHtml5',
          text:      '<i class="bi bi-file-earmark-excel"></i> ',
          titleAttr: 'Exportar a Excel',
          className: 'btn btn-success'
        },
        {
          extend:    'pdfHtml5',
          text:      '<i class="bi bi-file-earmark-pdf"></i> ',
          titleAttr: 'Exportar a PDF',
          className: 'btn btn-danger'
        },
        {
          extend:    'print',
          text:      '<i class="bi bi-printer"></i> ',
          titleAttr: 'Imprimir',
          className: 'btn btn-info'
        },
      ],
                columnDefs: [ {
            sortable: false,
            "class": "index",
            targets: 0
        } ],
        order: [[ 1, 'asc' ]],
        fixedColumns: true
        } );
 
    oTable.on( 'order.dt search.dt', function () {
        oTable.column(0, {search:'applied', order:'applied'}).nodes().each( function (cell, i) {
            cell.innerHTML = i+1;
        } );
    } ).draw();
            }); 

                
            </script>



