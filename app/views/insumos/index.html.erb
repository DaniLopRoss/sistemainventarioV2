<head>
<%= stylesheet_link_tag "style" %>
</head>
<div align="center">
<p style="color: green"><%= notice %></p>
<ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="">Insumos</a></li>
          <li class="breadcrumb-item active">Listar insumos</li>
        </ol>
<h4>Insumos</h4>

<div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                 
                  <p class="card-description">
                    
                  </p>
                  <div class="table-responsive pt-3">

                  <table class="table table-bordered" id="tablainsumos">
                  <thead class="thead-blue" >
                  <tr>
                  <th scope="col">Id </th>
                  <th scope="col">NOMBRE</th>
                  
                  <th>Caracteristicas</th>
                  <th>Existencia</th>
                  <th>Estatus</th>
                  <th>Acciones</th>
                  
                </tr>
              </thead>
              <tbody>
  
                  
<div id="insumos">
  <% @insumos.each do |insumo| %>
    <tr>
    <td><%= insumo.id %></td>
    <td><%= insumo.nombre %></td> 
    <td><%= insumo.caracteristicas %></td> 
    <td><%= insumo.existencia %></td> 
    <td><%= insumo.estatus %></td> 
    <td>
    <a href="<%= edit_insumo_path(insumo)%>" class="edit"><i class="bi bi-pencil-square"></i></a>
      <a  class="mostrar" <%= link_to ({:action => :show, :id => insumo.id}) do %><i class="bi bi-eye-fill"></i><%end%></a>  
      <a class="eliminar" <%= link_to ({ :action => :destroy, :id => insumo.id })do%>
      <i class="bi bi-trash"></i>
      <% end %>
      </a>
    </td>
    </tr>
    <% end %>
    

</div>

<a href="insumos/new" class="new"><i class="bi bi-plus-circle-fill"></i></a>

<script>
            $(document).ready(function() {
              var oTable = $("#tablainsumos").DataTable({
                language: {
                  url: '//cdn.datatables.net/plug-ins/1.13.1/i18n/es-MX.json'
              }
              });
      } );
            </script>