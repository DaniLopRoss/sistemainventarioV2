<head>
<%= stylesheet_link_tag "style" %>
</head>
<div align="center">
<p style="color: green"><%= notice %></p>
<ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="">Licencias</a></li>
          <li class="breadcrumb-item active">Lista Licencias</li>
        </ol>
<h4>Licencias</h4>

<div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                 
                  <p class="card-description">
                    
                  </p>
                  <div class="table-responsive pt-3">

                  <table class="table table-bordered" id="tablalicencia">
                  
  <thead class="thead-blue" >
    <tr>
    <th>No.</th>
      
      <th>Nombre</th>
      <th>Año</th>
      <th>Número de licencia</th>
      <th>Acciones</th>
     
      
    </tr>
  </thead>
<div id="licencia">
  <% @licences.each do |licences| %>
    <tr>
    <td></td>
   
    <td><%= licences.nombre %></td>
    <td><%= licences.anio %></td>
    <td><%= licences.num_licencia %></td>
 <td>
              
              <a href="<%= edit_licence_path(licences)%>" class="edit"><i class="bi bi-pencil-square"></i></a>
               <a  class="mostrar"  <%= link_to ({:action => :show, :id => licences.id}) do %><i class="bi bi-eye-fill"></i><%end%></a>
               
               <a class="eliminar" <%= link_to ({ :action => :destroy, :id => licences.id})do%>
                  <i class="bi bi-trash"></i>
                  <%end%>
                  
                  </a>
              </td>

 
  </tr>
  <% end %>
</div>

<a href="licences/new" class="new"><i class="bi bi-plus-circle-fill"></i></a>


</div>

<script>
            $(document).ready(function() {
              var oTable = $("#tablalicencia").DataTable({
                language: {
                  url: '//cdn.datatables.net/plug-ins/1.13.1/i18n/es-MX.json'
              },

          responsive: "true",
          dom: 'Bfrtilp',    
                buttons:[ 
        {
          extend:    'excelHtml5',
          text:      '<i class="bi bi-file-earmark-excel"></i> ',
          titleAttr: 'Exportar a Excel',
          className: 'btn btn-success'
        },
        {
          extend:    'pdfHtml5',
          text:      '<i class="bi bi-file-earmark-pdf"></i> ',
          titleAttr: 'Exportar a PDF',
          className: 'btn btn-danger'
        },
        {
          extend:    'print',
          text:      '<i class="bi bi-printer"></i> ',
          titleAttr: 'Imprimir',
          className: 'btn btn-info'
        },
      ],
                columnDefs: [ {
            sortable: false,
            "class": "index",
            targets: 0
        } ],
        order: [[ 1, 'asc' ]],
        fixedColumns: true
        } );
 
    oTable.on( 'order.dt search.dt', function () {
        oTable.column(0, {search:'applied', order:'applied'}).nodes().each( function (cell, i) {
            cell.innerHTML = i+1;
        } );
    } ).draw();
            }); 

                
            </script>



