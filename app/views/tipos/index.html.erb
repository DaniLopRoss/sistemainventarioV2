<head>
<%= stylesheet_link_tag "style" %>
</head>
<div align="center">
<p style="color: green"><%= notice %></p>
<ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="">Tipos</a></li>
          <li class="breadcrumb-item active">Listar tipos</li>
        </ol>
<h4>Tipos</h4>

<div id="tipos">
<div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                 
                  <p class="card-description">
                    
                  </p>
                  <div class="table-responsive pt-3">

                  <table class="table table-bordered" id="tablatipo">
                  <thead class="thead-blue" >
                  <tr>
                  <th>ID_TIPO</th>
                  <th>NOMBRE</th>
                  <th> ACCIONES</th>

                  </tr>
                  </thead>
<% @tipos.each do |tipo| %>
 
  <tr>
<td><%= tipo.id %></td>
<td><%= tipo.nombre %></td> 
<td>

      <a href="<%= edit_tipo_path(tipo)%>" class="edit"><i class="bi bi-pencil-square"></i></a>
      <a href="tipos" class="mostrar"><i class="bi bi-eye-fill"></i></a>  
      <a class="eliminar" <%= link_to ({ :action => :destroy, :id => tipo.id })do%>
      <i class="bi bi-trash"></i>
      <% end %>
      </a>
</td>
</tr>
<% end %>
<a href="tipos/new" class="new"><i class="bi bi-plus-circle-fill"></i></a>

</div>



<script>
            $(document).ready(function() {
              var oTable = $("#tablatipo").DataTable({
                language: {
                  url: '//cdn.datatables.net/plug-ins/1.13.1/i18n/es-MX.json'
              }
              });
      } );
            </script>

