
<head>
<%= stylesheet_link_tag "style" %>
</head>

<div class="container">
<div class="card mt-5">
<div class="card-header">
<ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="">Departamentos</a></li>
          <li class="breadcrumb-item active">Caracteristicas del departamento</li>
        </ol>
                  <h4 class="text">Departamento <%= @departamento.id_departamento%> </h4>
</div>
 <div class="probar">

<p style="color: green font-size: 20px"><%= notice %></p>


<%= render @departamento %>

<div>
<%= link_to "Regresar a departamentos", departamentos_path, class: "btn btn-success btn-xs round" %>

<%= link_to "Editar  departamento", edit_departamento_path(@departamento), class: "btn btn-success btn-xs round" %> 
 

  <%= link_to "Eliminar departamento", departamentos_path(@departamento), method: :delete, data: { confirm: "Esta seguro de eliminar"}, class: "btn btn-success btn-xs round" %>
 
</div>
