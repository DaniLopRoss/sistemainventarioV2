<head>
<%= stylesheet_link_tag "style" %>
</head>

<div class="container">
<div class="card mt-5">
<div class="card-header">

<h4 class="text">Nuevo Departamento </h4>
</div>
 <div class="probar">

 <%= form_with(model: departamento) do |form| %>
  <%= token_tag nil %>
   <% if departamento.errors.any? %>
     <div style="color: red">
       <h2><%= pluralize(departamento.errors.count, "error") %> prohibited this departamento from being saved:</h2>
 
       <ul>
         <% departamento.errors.each do |error| %>
           <li><%= error.full_message %></li>
         <% end %>
       </ul>
     </div>
   <% end %>
   <br>

   <div class="form-group row">
   <%= form.label :nombre ,'Nombre:', class:'col-sm-2' %>
   
   <div class="col-sm-4">
   <%= form.text_field :nombre , class:'form-control' %>
   </div>
</div>



 
   <div class="form-group row ">
     <%= form.label :num_equipo, class:'col-sm-2'%>
     <div class="col-sm-4">
     <%= form.number_field :num_equipo, class:'form-control'  %>
     </div>
   </div>
 
   

   

 <br>
   <div>
   <button class="btn btn-info" <%= form.submit %> Guardar </button>
   <%= link_to 'Cancelar', url_for(:back), class: "btn btn-warning" %>
   </div>
   </div>
 <% end %>
              





