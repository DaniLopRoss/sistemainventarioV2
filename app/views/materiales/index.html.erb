<head>
<%= stylesheet_link_tag "style" %>
</head>
<div align="center">
<p style="color: green"><%= notice %></p>
<ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="">Materiales</a></li>
          <li class="breadcrumb-item active">Listar materiales</li>
        </ol>
<h4>Materiales</h4>

<div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                 
                  <p class="card-description">
                    
                  </p>
                  <div class="table-responsive pt-3">

                  <table class="table table-bordered" id="tablamaterial">
                  <thead class="thead-blue" >
                  <tr>
                  <th scope="col">Id </th>
                  <th scope="col">NOMBRE</th>
                  
                  <th>Caracteristicas</th>
                  <th>Existencia</th>
                  <th>Estatus</th>
                  <th>Acciones</th>
                  
                </tr>
              </thead>
              <tbody>

<div id="materiales">
  <% @materiales.each do |materiale| %>
    <tr>
    <td><%= materiale.id %></td>
    <td><%= materiale.nombre %></td> 
    <td><%= materiale.caracteristicas %></td> 
    <td><%= materiale.existencia %></td> 
    <td><%= materiale.estatus %></td> 
    <td>
    <a href="materiale/new" class="new"><i class="bi bi-plus-circle-fill"></i></a>
    <a href="<%= edit_materiale_path(materiale)%>" class="edit"><i class="bi bi-pencil-square"></i></a>
    <a href="materiale" class="mostrar"><i class="bi bi-eye-fill"></i></a>  
     <a class="eliminar" <%= link_to ({ :action => :destroy, :id => materiale.id })do%>
    <i class="bi bi-trash"></i>
    <% end %>
    </a>
    </td>
    <td> <%= link_to "Lista tipo", materiale %></td>
    <td><%= link_to 'Editar', edit_materiale_path(materiale)%></td>
    <td><%= link_to 'Eliminar', { :action => :destroy, :id => materiale.id }, :method => :delete, :data => { :confirm => 'Esta seguro?' } %></td>
    </tr>
    <p>
      
    </p>
  <% end %>
   <a href="materiales/new" class="new"><i class="bi bi-plus-circle-fill"></i></a>
</div>


<script>
            $(document).ready(function() {
              var oTable = $("#tablamaterial").DataTable({
                language: {
                  url: '//cdn.datatables.net/plug-ins/1.13.1/i18n/es-MX.json'
              }
              });
      } );
            </script>

