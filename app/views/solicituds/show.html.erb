<head>
  <%= stylesheet_link_tag "style" %>
</head>
<div class="container">
  <div class="card mt-5">
    <div class="card-header">

      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="">Solicitud</a></li>
        <li class="breadcrumb-item active">Caracteristicas solicitud</li>
      </ol>

      <h4 class="text">Caracteristicas solicitud <%= @solicitud.id%> </h4>
    </div>
    <div class="probar">

      <div class="form-group row">
        <%= label :zone_id, 'Area solicitante', class: 'col-sm-2'%>
        <div class="col-sm-4">
          <%= @solicitud.zone.nombre%>
        </div>
      </div>

      <div class="form-group row">
        <%= label :fecha, 'Fecha final', class: 'col-sm-2'%>
        <div class="col-sm-4">
          <%= @solicitud.fecha%>
        </div>
      </div>

      <div class="form-group row">
        <%= label :descripcion, 'Observaciones', class: 'col-sm-2'%>
        <div class="col-sm-4">
          <%= @solicitud.descripcion%>
        </div>
      </div>

      <div class="form-group row">
        <%= label :usuarios_id, 'Usuario', class: 'col-sm-2'%>
        <div class="col-sm-4">
          <%= @solicitud.usuarios_id%>
        </div>
      </div>
      <br>
      </br>

      <div>
        <%if can? :edit, Solicitud%>
        <%= link_to "Editar", edit_solicitud_path(@solicitud),  class: "btn btn-warning btn-xs round btn-editar " %>
        <%end%>
        <%if can? :destroy, Solicitud%>
        <%= link_to "Eliminar", @solicitud, method: :delete , data: { confirm: "Esta seguro de eliminar"}, class: "btn btn-danger btn-eliminar"  %>
        <%end%>

        <%= link_to "Regresar", solicituds_path,  class: "btn btn-success btn-xs round btn-regresar " %>
        <br>
        </br>
      </div>