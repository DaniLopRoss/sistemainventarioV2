
<div align="center">

<ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="">Tipos</a></li>
          <li class="breadcrumb-item active">Listar tipos</li>
        </ol>
<h4>Tipos</h4>

<div id="tipos">
<div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                 
                  <p class="card-description">
                    
                  </p>
                  <div class="table-responsive pt-3">

                  <table class="table table-bordered" id="tablatipo">
                  <thead class="thead-blue" >
                  <tr>
                  <th>ID_TIPO</th>
                  <th>NOMBRE</th>
                  <th> ACCIONES</th>

                  </tr>
                  </thead>
<% @shapes.each do |shape| %>
 
  <tr>
<td><%= shape.id %></td>
<td><%= shape.nombre %></td> 
<td>
      <%if can? :edit, Shape%>
      <a href="<%= edit_shape_path(shape)%>" class="edit"><i class="bi bi-pencil-square"></i></a>
      <%end%>
      <%if can? :show, Resource%>
       <a  class="mostrar"  <%= link_to ({:action => :show, :id => shape.id}) do %><i class="bi bi-eye-fill"></i><%end%></a> 
       <%end%>
       <%if can? :destroy, Resource%>
      <a class="eliminar" <%= link_to ({ :action => :destroy, :id => shape.id })do%>
      <i class="bi bi-trash"></i>
      <% end %>
      </a>
      <%end%>
</td>
</tr>
<% end %>
<a href="shapes/new" class="new"><i class="bi bi-plus-circle-fill"></i></a>

</div>



<script>
            $(document).ready(function() {
              var oTable = $("#tablatipo").DataTable({
                language: {
                  url: '//cdn.datatables.net/plug-ins/1.13.1/i18n/es-MX.json'
              }
              });
      } );
            </script>

