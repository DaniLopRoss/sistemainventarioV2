<head>
  <%= stylesheet_link_tag "style" %>
</head>
<div class="container">
  <div class="card mt-5">
    <div class="card-header">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="">Tipo</a></li>
        <li class="breadcrumb-item active"> Caracter√≠sticas de Tipo</li>
      </ol>

      <h5 class="text"> Tipo <%= @shape.id %> </h5>
    </div>
    <div class="probar">

      <%= render @shape %>
      <br>
      </br>
      <div>
        <%if can? :edit, Shape%>
        <%= link_to "Editar", edit_shape_path(@shape),  class: "btn btn-warning btn-xs round btn-editar " %>
        <%end%>
        <%if can? :destroy, Shape%>
        <%= link_to "Eliminar", @shape, method: :delete , data: { confirm: "Esta seguro de eliminar"},  class: "btn btn-danger btn-eliminar" %>
        <%end%>
        <%= link_to "Regresar", shapes_path ,  class: "btn btn-success btn-xs round btn-regresar " %>

        <br>
        </br>
      </div>